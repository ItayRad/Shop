  <div class="row">
    <%products.forEach(function(product){ %>
    <% if (product.status == 1) { %>
    <div class="myproducts col-xs-18 col-sm-6 col-md-3">
      <div class="thumbnail">
        <img class="productImg" src="<%=product.imagePath %>" alt="">
        <div class="caption">

          <h4><%=product.title%></h4>
          <p><%= product.description%></p>
          <p>Price:<%= product.price%>$</p>

          <% if (isAuthenticated) { if (isAdmin) { %> <p>quantity:<%= product.quantity%></p><% }} %>
          <div class="bottom-align-text col-sm-10">
            <% if (product.quantity>0) { %> <a href="/add-to-cart/<%=product.id%>" class="btn btn-info btn-xs " role="button">Add to Cart<i class="fas fa-cart-plus specialfas"></i></a>
            <% } else { %>
            <strike>Out of Stock</strike> <% } %>
            <!--     <% if (user == 1) { %> <a href="/removeProduct/<%=product.id%>" class="btn btn-danger btn-xs" role="button">REMOVE</a> <% } %> %> -->
          </div>
        </div>
      </div>
    </div>

    <% }}) %>
  </div><!-- End row -->

